{
  "sql.database": "mysql",
  "sql.formatOptions": {
    "keywordCase" : "upper",
    "dataTypeCase" :  "upper"
  },
  "languageserver": {
    "kotlin": {
      "command": "~/.vim/tools/kt-lsp/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "golang": {
      "command": "${userHome}/go/bin/gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
